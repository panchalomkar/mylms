<div class="stat_course_due  d-flex flex-row gap-2 col-md-12">
{{#stat_course_due}}
<div class="card flex-fill mb-4">
    <h3 style="justify-content: space-between;">
        <span><i class="{{icon}} mr-2"></i>{{label}}</span>
    </h3>

    <!-- Chart container -->
    <div class="progress-wrapper-user-stat mt-3 d-flex" style="align-items: center;">
        <div id="course-donut-{{id}}" style="width:50%; margin-right:30px; height:250px; "></div>

        <!-- Legend -->
        <div class="legend d-flex text-start flex-column justify-content-around" style="align-items: center; width:165px;">
            <div class="legend-item mb-3 red"><span>{{notstarted}}</span><br>Not Started</div>
            <div class="legend-item mb-3 yellow"><span>{{inprogress}}</span><br>In Progress</div>
            <div class="legend-item mb-2 blue"><span>{{completed}}</span><br>Completed</div>
        </div>
    </div>
</div>

<script>
Highcharts.chart('course-donut-{{id}}', {
    chart: {
        type: 'pie',
        width: 250,  // width in pixels
        height: 240, // height in pixels
        events: {
            render() {
                const chart = this;
                const series = chart.series[0];
                let customLabel = chart.options.chart.custom?.label;
//total removed
                const label = customLabel.label;
                const x = series.center[0] + chart.plotLeft;
                const y = series.center[1] + chart.plotTop - (label.getBBox().height / 2);

                label.attr({ x: x, y: y });
                label.css({ fontSize: `${series.center[2] / 12}px` });
            }
        }
    },
    title: { text: '' },
    tooltip: { pointFormat: '{series.name}: <b>{point.percentage:.0f}%</b>' },
    legend: { enabled: false },
    plotOptions: {
        series: {
            allowPointSelect: false,
            cursor: 'pointer',
            borderRadius: 8,
            innerSize: '75%',
            dataLabels: {
                enabled: false,
                distance: -30,
                format: '{point.percentage:.0f}%',
                style: { fontSize: '0.9em' }
            }
        }
    },
    series: [{
        name: 'Courses',
        colorByPoint: true,
        data: [
            { name: 'Not Started', y: {{notstarted}}, color: '#e74c3c' },
            { name: 'In Progress', y: {{inprogress}}, color: '#f1c40f' },
            { name: 'Completed', y: {{completed}}, color: '#1abc9c' }
        ]
    }]
});

</script>
