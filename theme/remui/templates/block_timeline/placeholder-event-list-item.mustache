{{!
    @template block_timeline/event-list-item

    This template renders an event list item loading placeholder for the timeline block.

    Example context (json):
    {}
}}
<li class="list-group-item bg-transparent px-2 py-5">
    <div class="row">
        <div class="col-8 pr-0">
            <div class="d-flex flex-row align-items-center" style="height: 32px">
                <div class="bg-pulse-grey" style="height: 80px;width: 80px;"></div>
                <div style="flex: 1" class="pl-2">
                    <div class="bg-pulse-grey w-25" style="height: 20px;"></div>
                    <div class="bg-pulse-grey w-75 mt-1 mb-4" style="height: 15px;"></div>
                <div class="bg-pulse-grey" style="height: 15px;width: 65px;"></div></div>
            </div>
        </div>
        <div class="col-4 pr-3">
            <div class="d-flex flex-row justify-content-end" style="height: 32px; padding-top: 2px">
                <div class="bg-pulse-grey" style="height: 28px;width: 100px;"></div>
            </div>
        </div>
    </div>
</li>
