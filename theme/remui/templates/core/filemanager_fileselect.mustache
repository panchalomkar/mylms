{{!
    @template core/filemanager_fileselect

    This template renders the window with file information/actions.

    Example context (json):
    {
        "helpicon": "<a class='btn ..'><i class='icon fa fa-question-circle ..'></i></a>",
        "licensehelpicon": {
            "text": "<ul><li><a href='http://en.wikipedia.org/wiki/All_rights_reserved'>All rights reserved</a></li></ul>",
            "alt": "Help with Choose license"
        },
        "columns": true
    }
}}
<div class="filemanager fp-select">
    <div class="fp-select-loading">
        {{#pix}}i/loading_small{{/pix}}
    </div>
    <form class="mform clearfix  m-0">
        <div class="form-group d-flex flex-gap-1 p-0">
            <button class="fp-file-download btn btn-secondary btn-sm">{{#str}}download{{/str}}</button>
            <button class="fp-file-delete btn btn-secondary btn-sm">{{#str}}delete{{/str}}</button>
            <button class="fp-file-setmain btn btn-secondary btn-sm">{{#str}}setmainfile, repository{{/str}}</button>
            <span class="fp-file-setmain-help">{{{helpicon}}}</span>
            <button class="fp-file-zip btn btn-secondary btn-sm">{{#str}}zip, editor{{/str}}</button>
            <button class="fp-file-unzip btn btn-secondary btn-sm">{{#str}}unzip{{/str}}</button>
        </div>
                <div class="fp-saveas form-group row mx-0 p-0 d-flex align-items-center">
                    <label class="form-control-label col-4 px-0 m-0 edw-form-label">{{#str}}name, repository{{/str}}</label>
                    <div class="col-8 form-inline p-0"><input class="form-control" type="text"/></div>
                </div>
                <div class="fp-author form-group row mx-0 p-0 d-flex align-items-center">
                    <label class="form-control-label col-4 px-0 m-0 edw-form-label">{{#str}}author, repository{{/str}}</label>
                    <div class="col-8 form-inline p-0"><input class="form-control" type="text"/></div>

                </div>
                <div class="fp-license form-group row mx-0 p-0 d-flex align-items-center">
                    {{>core/filemanager_chooselicense}}
                </div>
                <div class="fp-path form-group row mx-0 p-0 d-flex align-items-center">
                    <label class="form-control-label col-4 px-0 m-0 edw-form-label">{{#str}}path, repository{{/str}}</label>
                    <div class="col-8 form-inline p-0">
                        <select class="custom-select form-control"></select>
                    </div>
                </div>
                <div class="fp-original form-group row mx-0 p-0 ">
                    <div class="form-control-label col-4 px-0 m-0 edw-form-label">{{#str}}original, repository{{/str}}</div>
                    <div class="col-8 form-inline p-0">
                        <span class="fp-originloading">{{#pix}}i/loading_small{{/pix}} {{#str}}loading, repository{{/str}}</span><span class="fp-value"></span>
                    </div>
                </div>
                <div class="fp-reflist form-group row mx-0 p-0">
                    <div class="form-control-label col-4 px-0 m-0 edw-form-label">{{#str}}referenceslist, repository{{/str}}</div>
                    <div class="col-8 form-inline p-0">
                        <p class="fp-refcount"></p>
                        <span class="fp-reflistloading">{{#pix}}i/loading_small{{/pix}} {{#str}}loading, repository{{/str}}</span>
                        <ul class="fp-value"></ul>
                    </div>
                </div>
        <div class="fp-select-buttons form-group p-0 w-100 text-right p-mb-6 d-flex flex-row-reverse flex-gap-1">
            <button class="fp-file-update btn-primary btn btn-lg">{{#str}}update{{/str}}</button>
            <button class="fp-file-cancel btn-secondary btn btn-lg">{{#str}}cancel{{/str}}</button>
        </div>
    </form>
    <div class="fp-info clearfix">
    {{! <hr> }}
        <p class="fp-thumbnail"></p>
        <div class="fp-fileinfo">
            <div class="fp-datemodified">{{#str}}lastmodified, repository{{/str}} <span class="fp-value"></span></div>
            <div class="fp-datecreated">{{#str}}datecreated, repository{{/str}} <span class="fp-value"></span></div>
            <div class="fp-size">{{#str}}size, repository{{/str}} <span class="fp-value"></span></div>
            <div class="fp-dimensions">{{#str}}dimensions, repository{{/str}} <span class="fp-value"></span></div>
        </div>
    </div>
</div>
