{{!
    @template core_message/message_drawer_view_search_header

    This template will render the header of the search page in the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

<div class="hidden view-search" {{^isdrawer}}data-in-panel="true"{{/isdrawer}} aria-hidden="true" data-region="view-search">
    <div class="d-flex align-items-center view-search-header-wrapper">
        <a
            class="d-flex align-items-center  view-icon-back-in text-decoration-none"
            href="#"
            data-route-back
            data-action="cancel-search"
            role="button"
        >
            {{> core_message/message_drawer_icon_back }}
        </a>
        <div class="simplesearchform edw-search-field" >
            <div class="input-group">
                <label for="message-searchinput-overview">
                    <span class="sr-only">{{#str}} search, core_search {{/str}}</span>
                </label>
                <div class="input-group-prepend">
                    <button type="button" class="btn btn-submit" data-action="search" aria-label="{{#str}} search, core_search {{/str}}">
                        <span class="edw-icon edw-icon-Search"></span>
                        <span class="sr-only">{{#str}} search, core_search {{/str}}</span>
                    </button>
                </div>
                <input type="text" class="form-control withclear navigation-text align-self-center" placeholder="{{#str}} search, core_search {{/str}}" aria-label="{{#str}} search, core_search {{/str}}" data-region="search-input" title="{{#str}} search, core_search {{/str}}">
                <span class="hidden" data-region="loading-icon-container" >
                    {{> core/loading }}
                </span>
            </div>
        </div>
    </div>
</div>
