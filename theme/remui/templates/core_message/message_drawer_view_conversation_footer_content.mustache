{{!
    @template core_message/message_drawer_view_conversation_footer_content

    This template will render the footer content for the conversation page in
    the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

{{#showemojipicker}}
    <div
        class="emoji-auto-complete-container w-100 hidden"
        data-region="emoji-auto-complete-container"
        aria-live="polite"
        aria-hidden="true"
    >
    </div>
{{/showemojipicker}}
<div class="d-flex flex-gap-1d5 justify-content-between">
        {{#showemojipicker}}
            <div
                data-region="emoji-picker-container"
                class="emoji-picker-container hidden"
                aria-hidden="true"
            >
                {{> core/emoji/picker }}
            </div>
            <button
                class="btn p-0"
                aria-label="{{#str}} toggleemojipicker, core {{/str}}"
                data-action="toggle-emoji-picker"
            >
                <span class="edw-icon edw-icon-Smile_2"></span>
            </button>
        {{/showemojipicker}}
    <div class="position-relative w-100 d-flex align-items-center flex-gap-4 footer-input-btn-wrapper">
        <textarea
            dir="auto"
            data-region="send-message-txt"
            class="bg-light form-control p-0 border-0 bg-transparent"
            rows="1"
            data-auto-rows
            data-min-rows="1"
            data-max-rows="4"
            aria-label="{{#str}} typeamessage, theme_remui {{/str}}"
            placeholder="{{#str}} typeamessage, theme_remui {{/str}}"
            style="resize: none;"
            maxlength="{{messagemaxlength}}"
        ></textarea>
            <button
        class="btn p-0 "
        aria-label="{{#str}} sendmessage, core_message {{/str}}"
        data-action="send-message"
    >
        <span class="edw-icon edw-icon-send-2" data-region="send-icon-container"></span>
        <span class="hidden" data-region="loading-icon-container">{{> core/loading }}</span>
    </button>
    </div>
</div>
