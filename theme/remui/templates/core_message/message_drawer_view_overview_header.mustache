{{!
    @template core_message/message_drawer_view_overview_header

    This template will render the header for the overview page of the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}
<div class="overview-header align-items-between justify-content-between" aria-hidden="false" {{^isdrawer}}data-in-panel="true"{{/isdrawer}} data-region="view-overview">
    <div class="simplesearchform edw-search-field">
        <div class="input-group">
            <label for="message-searchinput-overview">
                <span class="sr-only">{{#str}} search, core_search {{/str}}</span>
            </label>
            <div class="input-group-prepend">
                <button type="submit" class="btn btn-submit" data-action="submit">
                    <span class="edw-icon edw-icon-Search"></span>
                    <span class="sr-only">{{#str}} search, core_search {{/str}}</span>
                </button>
            </div>
            <input type="text" id="message-searchinput-overview" class="form-control withclear navigation-text align-self-center" placeholder="{{#str}} search, core_search {{/str}}" aria-label="{{#str}} search, core_search {{/str}}" name="{{{ inputname }}}" data-region="view-overview-search-input" title="{{#str}} search, core_search {{/str}}">
        </div>
    </div>
    <div class="message-header-action-btns d-flex  align-items-center pr-0">
        <div class="message-header-action-btn">
            <a href="#" data-route="view-contacts" role="button" title="contact request count">
                <span class="edw-icon edw-icon-Group-user"></span>
                <!--{{#str}} contacts, core_message {{/str}} -->
                <span
                    class="badge edw-msg-panel-badge {{^contactrequestcount}}hidden{{/contactrequestcount}}"
                    data-region="contact-request-count"
                >
                    <span aria-hidden="true">{{contactrequestcount}}</span>
                    <span class="sr-only">{{#str}} pendingcontactrequests, core_message, {{contactrequestcount}} {{/str}}</span>
                </span>
            </a>
        </div>
        {{#caneditownmessageprofile}}
        <div class="message-header-action-btn">
            <a
                href="#"
                data-route="view-settings"
                data-route-param="{{loggedinuser.id}}"
                aria-label="{{#str}} settings, core_message {{/str}}"
                role="button"
                title="{{#str}} settings, core_message {{/str}}"
            >
                <span class="edw-icon edw-icon-Setting"></span>
            </a>
        </div>
        {{/caneditownmessageprofile}}
    </div>
</div>
