{{!
    @template core_admin/header_search_input

    Admin search input for page header.

    Example context (json):
    {
        "action": "http://moodle.local/admin/search.php",
        "query": "themedesigner"
    }
}}
<div class="simplesearchform edw-search-field  mb-0">
    <form autocomplete="off" action="{{action}}" method="get" accept-charset="utf-8"
    class="mform form-inline simplesearchform searchform-navbar mb-0">
        <div class="input-group align-items-center bg-white ">
            <label for="searchinput-{{uniqid}}">
                <span class="sr-only">{{#str}} search, core {{/str}}</span>
            </label>
            <div class="input-group-prepend">
                <button type="submit" class="btn btn-submit">
                    <span class="edw-icon edw-icon-Search"></span>
                    <span class="sr-only">{{#str}} search, core {{/str}}</span>
                </button>
            </div>
            <input type="text" id="searchinput-{{uniqid}}" class="form-control withclear navigation-text"
            placeholder="{{#str}} search, core {{/str}}" aria-label="{{#str}} search, core {{/str}}" name="query"
            data-region="input" autocomplete="off" {{#query}}value="{{.}}" {{/query}}>
        </div>
    </form>
</div>
