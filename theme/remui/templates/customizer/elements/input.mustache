{{!
    @template theme_remui/customizer/elements/input
}}

{{#inputs}}
<div id="fitem_id_{{name}}" class="form-group row fitem {{classes}}">
    <div class="d-flex justify-content-between align-items-center w-100 mb-1">
        <div class="d-flex align-items-center flex-gap-d5">
            <label class="col-form-label pb-0" for="id_{{name}}">
                {{label}}
            </label>
            {{{help}}}
        </div>
        <div class="reset-button input-reset btn p-0" title="{{#str}}resetdesc, theme_remui{{/str}}" data-default="{{default}}">
            <span class="edw-icon edw-icon-Refresh small"></span>
        </div>
    </div>
    <div class="col-md-9 form-inline felement" data-fieldtype="{{type}}" id="yui_3_17_2_1_1606564568615_1166">
        <input type="{{type}}" class="form-control " name="{{name}}" id="id_{{name}}" value="{{default}}" {{{options}}}>
        <div class="form-control-feedback invalid-feedback" id="id_error_{{name}}">
        </div>
    </div>
</div>
{{/inputs}}
