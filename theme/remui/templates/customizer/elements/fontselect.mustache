{{!
    @template theme_remui/customizer/elements/select
}}

<select class="w-100 dropup font-selector" data-dropup-auto="false" name="{{name}}" id="id_{{name}}">
    {{#options}}
        <option data-tokens="{{value.name}}" value="{{key}}" {{selected}} data-content="<img class='font-image w-100' src='{{value.url}}' loading='lazy'>">{{value.name}}</option>
    {{/options}}
</select>

{{#js}}
    require(['jquery', 'theme_remui/bootstrap-select'], function($){
        $("#id_{{name}}").selectpicker({
            dropupAuto: false,
            liveSearch: true,
            showContent: true,
            liveSearchPlaceholder: '{{#str}}searchtext,theme_remui {{/str}}'
        });
    });
{{/js}}
