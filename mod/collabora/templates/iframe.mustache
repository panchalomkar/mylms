{{!
    @template mod_collabora/iframe

    Displays collabora iframe

    Example context (json):
    {
        "id" : 1
    }

}}

<div id="iframe-container_{{id}}" class="h-100 w-100 d-flex flex-row-reverse">
    {{> mod_collabora/version_viewer }}
    <div class="collabora-frame h-100 flex-grow-1">
        <iframe
            class="collabora-iframe border w-100 h-100"
            id="collaboraiframe_{{id}}"
            name="collaboraiframe_{{id}}"
            src="about:blank" allowFullscreen>
        </iframe>
    </div>
    {{> mod_collabora/spinner }}
</div>
