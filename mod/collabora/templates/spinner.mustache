{{!
    @template mod_collabora/spinner

    Displays a modal dialog just with a waiting.

    Example context (json):
    { }

}}

<div id="collabora-spinner-{{id}}" class="d-none">
    <div class="modal-backdrop show">
    </div>
    <div class="w-100 text-center text-light display-4" style="position:fixed;top:40%;left:0;z-index:2001;">
        <i class="fa fa-spinner fa-spin fa-2x fa-fw"></i><br>
        {{#str}} pleasewait, mod_collabora {{/str}}
    </div>
</div>
