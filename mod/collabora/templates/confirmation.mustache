{{!
    @template mod_collabora/confirmation

    Displays a confirmation question

    Example context (json):
    {
        "title" : "Confirmation",
        "confirmquestion" : "Do you really want to...?",
        "moreinfos" : "",
        "confirmbutton" : "<form><button>Ok</button></form>",
        "cancelbutton" : "<form><button>Cancel</button></form>"
    }

}}
<div class="d-flex justify-content-center row">
    <div class="col-xl-5 col-lg-7 col-md-9 col-12">
        <div class="card confirmation">
            <div class="card-header">
                <div class="card-title">
                    <h2>{{title}}</h2>
                </div>
            </div>
            <div class="card-body">
                <div class="confirmquestion">
                    {{{confirmquestion}}}
                </div>
                {{#moreinfos}}
                    <div class="moreinfos mt-2">
                        {{{.}}}
                    </div>
                {{/moreinfos}}
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-end">
                    {{{confirmbutton}}}{{{cancelbutton}}}
                </div>
            </div>
        </div>
    </div>
</div>
