{{!
    @template mod_collabora/inline

    Displays collabora iframe as activity page.

    Example context (json):
    {
        "id" : 1,
        "frameheight" : "0"
    }

}}

<div id="collabora-inline_{{id}}" class="collabora-inline-container" style="{{#frameheight}} height:{{.}}px {{/frameheight}}">
    <!-- The iframe starts here. Later it is moved between the modal and inline view. -->
    {{> mod_collabora/iframe}}
</div>
