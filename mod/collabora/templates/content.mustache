{{!
    @template mod_collabora/content

    Displays etherpad content

    Example context (json):
    {
        "id" : 46,
        "filename" : "Test document",
        "loadfileurl": "https://example.com",
        "activitymenu" : "<select><option>1</option><option>2</option></select>",
        "lockicon" : "<img alt=\"icon\" src=\"icon.png\">",
        "frameheight" : "0",
        "warning" : "",
        "hasnotice" : 1,
        "noticetype" : "warning",
        "notice" : "Collabora URL is not configured for this site"
    }

}}

{{#hasnotice}}
    <div class="alert alert-{{noticetype}} alert-block " role="alert">
        {{notice}}
    </div>
{{/hasnotice}}

{{^embedded}}
    {{# filename}}
    <h5>
        {{#str}}file{{/str}}: {{.}}
    </h5>
    {{/ filename}}
{{/embedded}}

{{^warning}}
    <div class="d-flex justify-content-between">
        {{^embedded}}
            <button type="button" title="{{#str}}fullscreen, mod_collabora{{/str}}" class="collaboramodal btn btn-primary btn-sm me-2 px-1" data-bs-toggle="modal" data-bs-target="#collaboramodal_{{id}}">
                <i class="fa fa-expand fa-lg fa-fw" aria-hidden="true"></i>
            </button>
        {{/embedded}}
        {{{activitymenu}}}
        <span class="flex-grow-1 align-self-center ms-2">
            {{{lockicon}}}
        </span>
        {{#loadfileurl}}
            <div class="align-self-center me-2{{^embedded}} mt-2{{/embedded}}">
                <a href="{{{.}}}" title="{{#str}}download{{/str}}">
                    <i class="icon fa fa-download"></i>{{#str}}download{{/str}}
                </a>
            </div>
        {{/loadfileurl}}
    </div>
    {{> mod_collabora/inline}}
    {{^embedded}}
        {{> mod_collabora/modal}}
    {{/embedded}}
{{/warning}}

{{#warning}}
    <div class="alert alert-warning">{{.}}</div>
{{/warning}}

{{#js}}
    {{^warning}}
        {{^frameheight}}
        require(['mod_collabora/resizeiframe'], function(resizeiframe) {
                resizeiframe.init();
        });
        {{/frameheight}}
    {{/warning}}
{{/js}}
