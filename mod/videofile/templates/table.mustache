{{!
    @template mod_videofile/video

    The main page to view the custom certificate activity

    Classes required for JS:
    * None

    Data attibutes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * cmid
    * courseid
    * videoprogress

    Example context (json):
    {
        
        "cmid": "25",
        "courseid": "51",
        "videoprogress": true,
    }
}}
<table class="generaltable mod_index">
	<thead>
		<tr>
			{{#usesections}}
				<td align="center">{{{strsectionname}}}</td>
				<td align="left">{{#str}}name{{/str}}</td>
				<td align="left">{{#str}}moduleintro{{/str}}</td>
			{{/usesections}}

			{{^usesections}}
				<td align="left">{{#str}}lastmodified{{/str}}</td>
				<td align="left">{{#str}}name{{/str}}</td>
				<td align="left">{{#str}}moduleintro{{/str}}</td>
			{{/usesections}}
		</tr>
	</thead>

	<tbody>
		{{#data}}
		<tr>
			<td>{{#printsection}}<span class="smallinfo">{{{printsection}}}</span>{{/printsection}}{{{printsection}}}</td>
			<td><a href="view.php?id={{{cmid}}}" class="{{{class}}}" {{{extra}}}>
			<img src="{{{icon}}}{{{videofilename}}}" class="activityicon" alt="{{{alt}}}" /></a></td>
			<td>{{{moduleintro}}}</td>
		</tr>
		{{/data}}
	</tbody>
</table>
