{{!
    @template mod_videofile/video

    The main page to view the custom certificate activity

    Classes required for JS:
    * None

    Data attibutes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * cmid
    * courseid
    * videoprogress

    Example context (json):
    {
        
        "cmid": "25",
        "courseid": "51",
        "videoprogress": true,
    }
}}

{{#youtu}}
    {{#ismobile}}
        <iframe id="plms-video" src="https://www.youtube.com/embed/{{{youtubeurl}}}?widget_referrer=https://vikatan.paradisolms.net/Fcourse/Fview.php:Fid:D1087&amp;enablejsapi=1&amp;origin=https://vikatan.paradisolms.net&amp;widgetid=1" width="{{{width}}}" height="{{{height}}}" allowfullscreen="allowfullscreen" mozallowfullscreen="mozallowfullscreen" msallowfullscreen="msallowfullscreen" oallowfullscreen="oallowfullscreen" webkitallowfullscreen="webkitallowfullscreen" ></iframe>
    {{/ismobile}}
    {{#isresponsive}}
        <div class="col-md-12 col-md-offset-2"> 
            <div class="video-container">  
                <div id="plms-video" class="embed-responsive-item">    
                </div>
            </div>
        </div>
    {{/isresponsive}}
    {{#isnotresponsive}}
       <div id="plms-video"></div> 
    {{/isnotresponsive}}
{{/youtu}}
{{#vimeo}}
  {{#isresponsive}}
    <div class="col-md-12 col-md-offset-2">
        <div class="video-container">
            <iframe id="plms-video" src="https://player.vimeo.com/video/{{{vimeourl}}}?api=1&player_id=plms-video" width="{{{width}}}" height="{{{height}}}" allowfullscreen="allowfullscreen" mozallowfullscreen="mozallowfullscreen" msallowfullscreen="msallowfullscreen" oallowfullscreen="oallowfullscreen" webkitallowfullscreen="webkitallowfullscreen" ></iframe>
        </div>
    </div>
  {{/isresponsive}}
  {{#isnotresponsive}}
        <iframe id="plms-video" src="https://player.vimeo.com/video/{{{vimeourl}}}?api=1&player_id=plms-video" width="{{{width}}}" height="{{{height}}}" allowfullscreen="allowfullscreen" mozallowfullscreen="mozallowfullscreen" msallowfullscreen="msallowfullscreen" oallowfullscreen="oallowfullscreen" webkitallowfullscreen="webkitallowfullscreen" ></iframe>
  {{/isnotresponsive}}
{{/vimeo}}
{{#isvideo}}
    <video id="videofile-{{{videofileid}}}" class="video-js vjs-default-skin" controls="controls" preload="auto" width="{{{width}}}" height="{{{height}}}" poster="{{{posterurl}}}" data-setup="{}" src="{{{src}}}" playsinline></video>
{{/isvideo}}
