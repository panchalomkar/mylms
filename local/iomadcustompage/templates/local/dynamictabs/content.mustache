{{!
    @template local_iomadcustompage/local/dynamictabs/editor

}}
<h2 class="sr-only">{{#str}} iomadcustompagecontents, local_iomadcustompage {{/str}}</h2>
<div class="iomadcustompage-page"
     data-region="local_iomadcustompage/page"
     data-page-id="{{pageid}}"
     data-parameter="[]">
  <div class="iomadcustompage-wrapper d-flex flex-column flex-lg-row">
    {{! page }}
    <div class="iomadcustompage-page-container">
      <div data-region="local_iomadcustompage/page-header" class="dropdown d-flex justify-content-end">
        {{! Edit button }}
        <a href="{{pageediturl}}" role="button" data-action="toggle-edit-preview" class="btn btn-primary"
                data-edit-mode="0" title="{{#str}} editpage, local_iomadcustompage {{/str}}">
          {{#pix}} t/editstring, core {{/pix}}
          {{#str}} editpage, local_iomadcustompage {{/str}}
        </a>
      </div>
      <div class="iomadcustompage-contents-container mt-2">
        {{{pagecontents}}}
      </div>
    </div>
  </div>
</div>
