{{!
@template block_timeline/event-list-item

This template renders an event list item loading placeholder for the timeline block.

Example context (json):
{}
}}
{{#search}}
<label class="p-p-4 m-0">{{#str}} searchresultfor, local_edwiserpagebuilder, {{search}}{{/str}} <a data-region="cancel-result"
        href="#" class="px-5">x</a></label>
{{/search}}
{{#tasks}}
{{> local_edwiserpagebuilder/remuiblck/task-list-item }}
{{/tasks}}
{{^tasks}}
<div class="no-tasks d-flex flex-column align-items-center" title="{{#str}} notasks, local_edwiserpagebuilder {{/str}}">
    <div class="no-task-wrapper d-flex flex-column align-items-center justify-content-center">
        <span > <img class="epb-img-icon" src="{{{nodataimg}}}"  width="60" height="60"> </span>
        <div class="no-data-msg">
            {{#str}} notasks, local_edwiserpagebuilder {{/str}}
        </div>
        <a data-region="add-schedule-task" class="btn btn-primary btn-sm add-item-toggle p-mt-5" title="{{#str}} addtask, local_edwiserpagebuilder {{/str}}">
            {{! <i class="icon fa fa-plus text-white" aria-hidden="true"></i> }}
            {{#str}} addtask, local_edwiserpagebuilder {{/str}}
        </a>
    </div>
</div>
{{/tasks}}
