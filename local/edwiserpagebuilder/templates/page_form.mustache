<div id="epb_page_form_container" class="p-4 w-100">
    <div class="heading">
        <h3>{{{label}}}</h3>
    </div>
    <div class="body">
        <form class="" id="pageEditForm">
            <div class="form-group">
                <label class="form-control-label" for="pagesselector">{{#str}}formpageselector, local_edwiserpagebuilder{{/str}}</label>
                <select name="pagelist" class="form-control" id="pagesselector">
                    {{#pages}}
                    <option data-instid="{{instid}}" data-pagename="{{title}}" data-fullscreen="{{fullscreen}}" data-pageid="{{pageref}}">{{label}}</option>
                    {{/pages}}
                </select>
            </div>
            <input type="hidden" name="instid" value="{{id}}" id="instid" placeholder="Inst id" required>
            <input type="hidden" name="pageid" value="{{id}}" id="pageid" placeholder="Page id" required>
            <div class="form-group">
              <label class="form-control-label" for="pagename">{{#str}}formpagename, local_edwiserpagebuilder{{/str}}</label>
              <input type="text" class="form-control" name="pagename" value="" id="pagename" placeholder="Page name" required>
            </div>
            
            <div class="form-group">
                <label class="form-control-label" for="fullscreenselector">{{#str}}formpagewidth, local_edwiserpagebuilder{{/str}}</label>
                <select class="form-control" id="fullscreenselector" name="fullscreen">
                    <option value="0">
                        {{#str}}fullscreenwidth, local_edwiserpagebuilder{{/str}}
                    </option>
                    <option value="1">
                        {{#str}}regularwidth, local_edwiserpagebuilder{{/str}}
                    </option>
                </select>
            </div>
        </form>
    </div>
</div>
