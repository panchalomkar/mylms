		<option value="contains">{{#str}} contains,local_enroll_by_profile {{/str}}</option>
		<option value="exactmatch">{{#str}} exactmatch,local_enroll_by_profile {{/str}}</option>
		{{/text}}

		{{#numeric}}
		<option value="0">{{#str}} select_option,local_enroll_by_profile {{/str}}</option>
		<option value="equalsto">{{#str}} equalsto,local_enroll_by_profile {{/str}}</option>
		<option value="greaterthan">{{#str}} greaterthan,local_enroll_by_profile {{/str}}</option>
		<option value="lessthan">{{#str}} lessthan,local_enroll_by_profile {{/str}}</option>
		<option value="insideinterval">{{#str}} isbetween,local_enroll_by_profile {{/str}}</option>
