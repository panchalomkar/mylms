<div class="filterslist">
    <div class="panel-heading">
        <h5 class="panel-title">
            <a href="#collapse9" class="plms-reports-dropdown collapsed" data-toggle="collapse" data-parent="#accordion">
                {{#str}}city, local_people{{/str}}
                <i class="reports-dropdown fa fa-angle-down collapsed"></i>
            </a>
        </h5>
    </div>
    <div id="collapse9" class="panel-collapse collapse">
        <div class="panel-body">
            <div class="row">
                {{#cityop}}
                    <a href="#" data-name="city" class="reset">{{#str}}clear, local_people{{/str}}</a>
                {{/cityop}}
                <div class="clr_button"></div>
                <div class="col-md-12 searchbox select-option">
                    <form id="form-city" method="post" action="">
                    {{#cityop}}
                        <input type="hidden" class="filter-true" name="filter-true" value="true">
                    {{/cityop}}
                    <div class="form-group">
                        <select required="required" class="select custom-select form-control chosen-people" multiple="" id="menucityop" name="cityop[]">
                            {{#cityopt}}
                                <option value="{{{key}}}" {{{selected}}}>{{{key}}}</option>
                            {{/cityopt}}
                        </select>
                    </div>
                        <input type="hidden" name="multipleselectfilter" value="city">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>