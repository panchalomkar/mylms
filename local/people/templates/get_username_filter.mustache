<div class="filterslist">
    <div class="panel-heading">
        <h5 class="panel-title">
            <a href="#collapse22" class="plms-reports-dropdown collapsed" data-toggle="collapse" data-parent="#accordion">
                {{#str}}username, local_people{{/str}}
                <i class="reports-dropdown fa fa-angle-down collapsed"></i>
            </a>
        </h5>
    </div>
    <div id="collapse22" class="panel-collapse collapse">
        <div class="panel-body">
            <div class="row">
                {{#usernamevalue}}
                    <a href="#" data-name="username" class="reset">{{#str}}clear, local_people{{/str}}</a>
                {{/usernamevalue}}
                <div class="clr_button"></div>
                <div class="col-md-12 searchbox select-option">
                    <form id="form-username" method="post" action="">
                        {{#usernamevalue}}
                            <input class="filter-true" type="hidden" name="filter-true" value="true">
                        {{/usernamevalue}}
                        <div class="form-group">
                            <div class="input-group custom-search-form">
                                <input type="text" id="username" name="username" class="form-control input-lg" placeholder="{{#str}}Search..., local_people{{/str}}" value="{{{username}}}" required="required" autocomplete="off">
                            </div>
                        </div>
                        <input type="hidden" name="textfilter" value="username">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>