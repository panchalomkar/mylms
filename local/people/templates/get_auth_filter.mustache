<div class="filterslist">
    <div class="panel-heading">
        <h5 class="panel-title">
            <a href="#collapse23" class="plms-reports-dropdown collapsed" data-toggle="collapse" data-parent="#accordion">
                {{#str}}auth, local_people{{/str}}
                <i class="reports-dropdown fa fa-angle-down collapsed"></i>
            </a>
        </h5>
    </div>
    <div id="collapse23" class="panel-collapse collapse">
        <div class="panel-body">
            <div class="row">
                {{#authenticationop}}
                    <a href="#" data-name="auth" class="reset">{{#str}}clear, local_people{{/str}}</a>
                {{/authenticationop}}
                
                <div class="clr_button"></div>
                <div class="col-md-12 searchbox select-option">
                    <form id="form-auth" method="post" action="">
                        {{#authenticationop}}
                            <input type="hidden" class="filter-true" name="filter-true" value="true">
                        {{/authenticationop}}
                        {{{select}}}
                        <input type="hidden" name="selectfilter" value="auth">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>