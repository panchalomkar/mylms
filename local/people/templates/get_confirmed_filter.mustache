<div class="filterslist">
    <div class="panel-heading">
        <h5 class="panel-title">
            <a href="#collapse11" class="plms-reports-dropdown collapsed" data-toggle="collapse" data-parent="#accordion">
                {{#str}}confirmed, local_people{{/str}}
                <i class="reports-dropdown fa fa-angle-down collapsed"></i>
            </a>
        </h5>
    </div>
    <div id="collapse11" class="panel-collapse collapse">
        <div class="panel-body">
            <div class="row mt-2">
                {{#confirmedop}}
                    <a href="#" data-name="confirmed" class="reset">{{#str}}clear, local_people{{/str}}</a>
                {{/confirmedop}}
                {{#unconfirmed}}
                    <a href="#" data-name="unconfirmed" class="reset">{{#str}}clear, local_people{{/str}}</a>
                {{/unconfirmed}}
                <div class="clr_button"></div>
                <div class="col-md-12 searchbox">
                    <form id="form-confirmed" method="post" action="">                       
                        <div class="pad-ver">
                            <form class="form-block" method="post" action="">
                               {{{input2}}}
                               {{{input}}}
                            </form>
                        </div>
                         {{#confirmedop}}
                            <input class="filter-true" type="hidden" name="filter-true" value="true">
                        {{/confirmedop}}
                        {{#unconfirmed}}
                            <input class="filter-true" type="hidden" name="filter-true" value="true">
                        {{/unconfirmed}}
                        <div class="text-center mar-rgt"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>