<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/ticketing/db" VERSION="20181105" COMMENT="XMLDB file for common Point system tables"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>    
        <TABLE NAME="ticketing" COMMENT="This table contain all set of ticketing">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="assignto" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="department" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="title" TYPE="char" LENGTH="150" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="type" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="priority" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="description" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="modifieduser" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
         
        </TABLE>
        
        <TABLE NAME="ticketing_files" COMMENT="This table contain all set of ticketing">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="tid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="file" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="type" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
         
        </TABLE>
        
        
        
        
    </TABLES>
</XMLDB>