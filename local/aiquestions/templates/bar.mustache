{{!
    @template local_aiquestions/bar

    Template which show progress bar.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "percent": "30"
    }
}}
<div style="background-color: lightgray; border-radius: 16px;">
    <div style="color: #fff!important;
                background-color: #2196F3;
                border-radius: 16px;
                padding: 0.01em 16px;
                {{#percent}}
                    width: {{percent}}%">
                    {{percent}}%
                {{/percent}}
                {{^percent}}
                    width: 0%">
                    0%
                {{/percent}}
    </div>
</div>