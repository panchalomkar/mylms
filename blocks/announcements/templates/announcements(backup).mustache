<style>
.myprofile-header {
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 8px;
}

.myprofile-title {
  font-size: 15px;
  font-weight: 400;
  color: #333;
  margin: 0;
}
</style>
<div class="rightb-card">
<div class="myprofile-header d-flex justify-content-between align-items-center">
    <h5 class="myprofile-title">
      <i class="bi bi-megaphone"></i> Announcements
    </h5>
  </div>

         {{#announcements}}
    <div class="announcement-item mb-3">
      <h6><a href="{{url}}">{{title}}</a></h6>
      <small class="text-muted">{{timecreated}}</small>
      <div class="announcement-message mt-2">{{{message}}}</div>
    </div>
  {{/announcements}}

  {{^announcements}}
    <p class="text-muted">No announcements available.</p>
  {{/announcements}}
       </div>

       